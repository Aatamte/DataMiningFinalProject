# SLM-RL Search Environment Configuration
# Copy this file to .env and modify as needed

# Development mode (limits corpus to 10 pages for faster testing)
# DEV=1

# Data directory (where corpus and ChromaDB are stored)
DATA_DIR=./data

# Execution environment server
SANDBOX_HOST=localhost
SANDBOX_PORT=8080

# Docker resource limits
DOCKER_MEMORY_LIMIT=4G
DOCKER_CPU_LIMIT=2.0

# Corpus configuration
CORPUS_DATASET=willcb/rare-wiki-pages
EMBED_MODEL=all-MiniLM-L6-v2
